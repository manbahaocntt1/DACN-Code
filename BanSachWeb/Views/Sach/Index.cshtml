@using PagedList.Mvc;
@model PagedList.IPagedList<BanSachWeb.Models.Sach>

<div class="container">
    <h2 class="mt-4">Sách</h2>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col mb-5">
                <a href="https://www.facebook.com/" style="text-decoration:none;color:black">
                    <div class="card h-100">
                        <!-- Sale badge-->
                        <div class="badge bg-danger text-white position-absolute" style="top: 0.5rem; right: 0.5rem">-10 %</div>
                        <!-- Product image-->
                        <img class="card-img-top" src="~/Image/womanyellingcat-1573233850.jpg" alt="..." />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">Special Item</h5>
                                <!-- Product reviews-->
                                <div class="d-flex justify-content-center small text-warning mb-2">
                                    <div class="bi-star-fill">⭐</div>
                                    <div class="bi-star-fill">⭐</div>
                                    <div class="bi-star-fill">⭐</div>
                                    <div class="bi-star-fill">⭐</div>
                                    <div class="bi-star-fill">⭐</div>
                                </div>
                                <!-- Product price-->
                                <span class="text-muted text-decoration-line-through">$20.00</span>
                                $18.00
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">Da ban:</div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
    <div class="text-center">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded })
    </div>
</div>
